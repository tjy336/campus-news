<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kmbeast.mapper.NoticeMapper">

    <select id="listPageCount" resultType="int">

        SELECT COUNT(*)
        FROM notice n
        <where>
            <if test="id != null">
                AND n.id = #{id}
            </if>
            <if test="title != null and title != ''">
                AND n.title LIKE concat('%',#{title},'%')
            </if>
        </where>

    </select>

    <select id="list" resultType="com.kmbeast.pojo.vo.NoticeListItemVO">

        SELECT n.id,
               n.title,
               n.create_time AS createTime
        FROM notice n
        <where>
            <if test="id != null">
                AND n.id = #{id}
            </if>
            <if test="title != null and title != ''">
                AND n.title LIKE concat('%',#{title},'%')
            </if>
        </where>
        <if test="current != null and size != null">
            LIMIT #{current},#{size}
        </if>

    </select>

</mapper>
